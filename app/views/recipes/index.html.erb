<p id="notice"><%= notice %></p>

<h1>Mama's Kitchen</h1>


  <thead>
    <tr>
      <th colspan="3"></th>
 
  </thead>

    <% @recipes.each do |recipe| %>

<div class="col-md-4">
  <div class="recipe-box">
    <% if recipe.image? %>
      <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
    <% end %>
<div class="container2">
        <h2><%= recipe.title %></h2>
          <div class="row"></div>
        <p><%= recipe.description %></p>

        <button type="button" class="btn btn-default"><%= link_to 'View', recipe %></button>
       <div class="editdelete">
      <%= link_to 'Edit', edit_recipe_path(recipe) %>
      <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
</div>


  </div><!-- /recipe-box-->
</div><!--col-md-4-->
    <% end %>


<div class="col-md-4">
  <button type="button" class="btn btn-default"><h2><%= link_to 'Create a New Recipe', new_recipe_path %></h2></button>
</div>
